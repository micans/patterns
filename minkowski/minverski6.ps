doclip 1 eq {
  lw0 setlinewidth
  (stroke) [0 0 0] [0 0] 1.0 9 div draw_circle
  (clip)   [0 0 0] [0 0] 1.0 9 div draw_circle
} if

/u  2   sqrt def            % unit
/hu 0.5 sqrt def            % half unit

/start_mink {
  newpath
                          % { x y moveto }
                          % { x 0.0 add y 0.0 add pinv moveto }
  type 1 eq
      { x y moveto }
      { type 2 eq
        { x y pinv moveto }
        { x y pinv moveto }
        ifelse
      }
  ifelse
} def


/inv_mink {
  thepath { 48 sub themap exch get aload pop  % 48 ascii value of '0'
      /xo x def
      /yo y def
                              % dx dy
      u mul exch u mul        % udy udx  
      x add /x exch def       % y updated,
      y add /y exch def       % x updated
  
      type 1 eq
      { x y lineto }
      { type 2 eq
        { xo yo x y kvdl_lsi stroke }
        { x y pinv lineto }
        ifelse
      }
      ifelse
    }
    forall
  % closepath
  type 1 eq { stroke } if
} def

1 nlevel eq {
  lw1 setlinewidth
  /thepath (0123) def
  gsave
  1 1 1 {
    pop
    /x hu -1 mul def
    /y hu -1 mul def
    % (stroke) [ 0 0 0] [ x y ] 0.2 draw_circle
    start_mink
    inv_mink
    90 rotate
  } for
  grestore
} if


